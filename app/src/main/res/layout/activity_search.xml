<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySearch">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <include layout="@layout/toolbar5" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_below="@+id/include"
                android:background="#eee"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:id="@+id/relativeLayout">

                <com.af.silaa_grp.CustomControl.CustomEditText
                    android:id="@+id/txtsearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/imgsearch"
                    android:hint="جستجو کن..."
                    android:textColorHint="#797979"
                    android:imeActionLabel="جست‌وجو"
                    android:layout_marginLeft="10dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingRight="15dp"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/imgsearch"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
                    android:background="#ff7824"
                    android:layout_marginLeft="10dp"
                    android:padding="11dp"
                    android:src="@drawable/search" />

            </RelativeLayout>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/app_bar_layout"
                android:background="@color/grey_3"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/searchRecycle"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>
                    <include
                        android:id="@+id/lyt_no_item"
                        layout="@layout/include_no_item"
                        android:visibility="gone"

                        />
                    <include
                        android:id="@+id/lyt_failed"
                        layout="@layout/no_internet"
                        android:visibility="gone" />

                </RelativeLayout>

            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>