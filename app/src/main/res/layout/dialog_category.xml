<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgclose"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:padding="7dp"
            android:src="@drawable/cancel" />

        <com.cilla_project.gozar.CustomControl.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="انتخاب دسته:"
            android:textColor="#35960a"
            android:textSize="17dp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:id="@+id/linearsakhtemani"
            android:text="کارهای ساختمانی"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/linearforosh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"

            android:text="خرید و فروش"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/linearsanati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"

            android:text="کارهای صنعتی"
            android:textSize="18dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/linearkhayati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="-5dp"
            android:text="خیاطی و دوزندگی"

            android:textSize="18dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/linearhesabdari"
            android:layout_width="match_parent"
            android:layout_marginTop="-5dp"

            android:layout_height="wrap_content"
            android:text="حسابداری و دوزندگی"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:gravity="center_vertical">

        <Button
            android:id="@+id/linearkarkhane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"

            android:text="کارخانه های تولید کننده"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/linearkeshavarzi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="کارهای کشاورزی"


            android:textSize="18dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/linearmotefareghe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>/
            android:layout_marginTop="-5dp"
            android:text="متفرقه"
            android:textSize="18dp" />


    </RelativeLayout>

</LinearLayout>